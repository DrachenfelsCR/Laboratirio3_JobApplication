<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.JobApplicationActivity" android:background="@drawable/bglogin">

    <TextView
            android:text="Job Application"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tvJobAppTitle"
            android:textSize="30dp" android:textStyle="bold"
            android:textColor="#FFFFFF"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.59"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.059"/>
    <TextView
            android:text="Full Name"
            android:layout_width="73dp"
            android:layout_height="34dp" android:id="@+id/tvFullName"
            android:textSize="16dp" android:textColor="#FFFFFF"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="44dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="116dp"/>
    <EditText
            android:layout_width="124dp"
            android:layout_height="36dp"
            android:inputType="textPersonName"
            android:hint="First Name"
            android:ems="10"
            android:id="@+id/etFirstName"
            android:background="#FAF5F5" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/tvJobAppTitle" android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@+id/tvFullName"
            app:layout_constraintBottom_toTopOf="@+id/etStreetAddress1" app:layout_constraintVertical_bias="0.0"/>
    <EditText
            android:layout_width="124dp"
            android:layout_height="36dp"
            android:inputType="textPersonName"
            android:hint="Last Name"
            android:ems="10"
            android:id="@+id/etLastName"
            android:background="@color/white"
            app:layout_constraintStart_toEndOf="@+id/etFirstName" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="36dp" app:layout_constraintTop_toBottomOf="@+id/tvJobAppTitle"
            android:layout_marginBottom="24dp" app:layout_constraintBottom_toTopOf="@+id/etStreetAddress1"
            app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text="Current Address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tvCurrentAddress"
            android:textColor="#F8F5F5" android:textStyle="bold"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/tvFullName"
            android:layout_marginTop="32dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>

    <EditText
            android:layout_width="230dp"
            android:layout_height="36dp"
            android:background="@color/white"
            android:inputType="textPersonName"
            android:hint="Street Address"
            android:ems="10"
            android:id="@+id/etStreetAddress1"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="168dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="20dp"
    />
    <EditText
            android:layout_width="230dp"
            android:layout_height="36dp"
            android:inputType="textPersonName"
            android:hint="Street Address 2"
            android:background="@color/white"
            android:ems="10"
            android:id="@+id/etStreetAddress2"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/etStreetAddress1"/>
    <EditText
            android:layout_width="134dp"
            android:layout_height="34dp"
            android:background="@color/white"
            android:inputType="textPersonName"
            android:hint="State/Province"
            android:ems="10"
            android:id="@+id/etStateProvince"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="22dp" app:layout_constraintBottom_toTopOf="@+id/etCountry"
            android:layout_marginBottom="4dp"/>
    <EditText
            android:layout_width="92dp"
            android:layout_height="34dp"
            android:background="@color/white"
            android:inputType="textPersonName"
            android:hint="Postal/Zip.."
            android:ems="10"
            android:id="@+id/etPostalZip"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="144dp" app:layout_constraintTop_toBottomOf="@+id/etCity"
            android:layout_marginTop="4dp"/>
    <EditText
            android:layout_width="92dp"
            android:layout_height="34dp"
            android:inputType="textPersonName"
            android:hint="City"
            android:background="@color/white"
            android:ems="10"
            android:id="@+id/etCity"
            app:layout_constraintTop_toBottomOf="@+id/etStreetAddress2"
            android:layout_marginTop="8dp" app:layout_constraintEnd_toStartOf="@+id/etStateProvince"
            android:layout_marginEnd="4dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="1.0"/>
    <TextView
            android:text="Email Address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tvEmail"
            android:textColor="#FFFFFF" android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.297"
            app:layout_constraintTop_toBottomOf="@+id/tvCurrentAddress" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.094"/>
    <EditText
            android:layout_width="134dp"
            android:layout_height="34dp"
            android:background="@color/white"
            android:inputType="textPersonName"
            android:hint="Country"
            android:ems="10"
            android:id="@+id/etCountry"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp" app:layout_constraintBottom_toBottomOf="@+id/etEmail"
            android:layout_marginBottom="49dp"/>
    <EditText
            android:layout_width="230dp"
            android:layout_height="36dp"
            android:background="@color/white"
            android:inputType="textPersonName"
            android:hint="example@gmail.com"
            android:ems="10"
            android:id="@+id/etEmail"
            app:layout_constraintStart_toEndOf="@+id/tvEmail" android:layout_marginStart="12dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.027"
            app:layout_constraintBottom_toTopOf="@+id/etPhoneNumber" android:layout_marginBottom="12dp"/>
    <TextView
            android:text="Phone Number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/etPhone"
            android:textColor="#F4F3F3" android:textSize="16sp"
            android:textStyle="bold" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvEmail" android:layout_marginTop="18dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.095"/>
    <EditText
            android:layout_width="92dp"
            android:layout_height="34dp"
            android:background="@color/white"
            android:inputType="textPersonName"
            android:hint="Area code"
            android:ems="10"
            android:id="@+id/etAreaCode"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/etEmail" app:layout_constraintStart_toEndOf="@+id/etPhone"
            android:layout_marginStart="4dp"/>
    <EditText
            android:layout_width="134dp"
            android:layout_height="34dp"
            android:background="@color/white"
            android:inputType="textPersonName"
            android:hint="Phone number"
            android:ems="10"
            android:id="@+id/etPhoneNumber"
            app:layout_constraintStart_toEndOf="@+id/etAreaCode"
            android:layout_marginStart="6dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.026"
            app:layout_constraintBottom_toTopOf="@+id/etAplyPosition" android:layout_marginBottom="12dp"/>
    <TextView
            android:text="Applying Position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tvApPosition"
            android:textColor="#F8F6F6" android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/etPhone" android:layout_marginTop="28dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="4dp" android:textSize="16sp"/>
    <EditText
            android:layout_width="234dp"
            android:layout_height="34dp"
            android:background="@color/white"
            android:inputType="textPersonName"
            android:hint="Position"
            android:ems="10"
            android:id="@+id/etAplyPosition"
            app:layout_constraintStart_toEndOf="@+id/tvApPosition"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.026"
            app:layout_constraintBottom_toTopOf="@+id/etStartDate" android:layout_marginBottom="12dp"/>
    <TextView
            android:text="Start Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tvStartDate"
            android:textColor="#F3ECEC" android:textSize="16sp"
            android:textStyle="bold" app:layout_constraintTop_toBottomOf="@+id/tvApPosition"
            android:layout_marginTop="24dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="56dp"/>
    <EditText
            android:layout_width="234dp"
            android:layout_height="34dp"
            android:background="@color/white"
            android:inputType="textPersonName"
            android:hint="Date"
            android:ems="10"
            android:id="@+id/etStartDate"
            app:layout_constraintStart_toEndOf="@+id/tvStartDate" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="11dp" android:layout_marginBottom="215dp"/>
    <Button
            android:text="Submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnSubmitJobApp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="144dp" app:layout_constraintEnd_toStartOf="@+id/btnJobAppReturn"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.75"
            android:layout_marginBottom="132dp"/>
    <Button
            android:text="Return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnJobAppReturn"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="132dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>