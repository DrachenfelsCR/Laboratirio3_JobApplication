<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ui.ListJobApplication">
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="409dp"
            android:layout_height="729dp"
            android:id="@+id/listRecyclerView"
            app:layout_constraintTop_toBottomOf="@+id/svNombre" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.5"/>
    <androidx.appcompat.widget.SearchView
            android:layout_width="316dp"
            android:layout_height="65dp"
            android:id="@+id/svNombre"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
    />
    <Button
            android:text="back"
            android:layout_width="79dp"
            android:layout_height="53dp" android:id="@+id/btnBack"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" android:layout_marginEnd="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>